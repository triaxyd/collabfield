<div class="container">
  <h1>Create a Group Conversation</h1>
  <%= form_with model: @conversation, url: group_conversations_path do |f| %>
    <label>Group Name:</label>
    <%= f.text_field :name, required: true %>

    <label>Select Users:</label>
    <% @users.each do |user| %>
      <div>
        <%= check_box_tag 'group_conversation[user_ids][]', user.id %>
        <%= user.name %>
      </div>
    <% end %>

    <%= f.submit "Create Group" %>
  <% end %>
</div>