<div class="container">
  <h1>Create a Group Conversation</h1>
  <%= form_with model: @conversation, url: group_conversations_path, method: :post do |f| %>
    <%= hidden_field_tag 'creator_id', current_user.id %>

    <label for="group_name">Group Name:</label>
    <%= f.text_field :name, required: true, id: "group_name" %>

    <label>Select Users:</label>
    <% @users.each do |user| %>
      <div>
        <label>
          <%= check_box_tag 'group_conversation[user_ids][]', user.id %>
          <%= user.name %>
        </label>
      </div>
    <% end %>

    <%= f.submit "Create Group" %>
  <% end %>
</div>
